<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7F5"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/detail_image"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="20dp"
            android:src="@android:drawable/ic_menu_gallery"
            android:contentDescription="Flower image" />

        <TextView
            android:id="@+id/detail_flower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŒ¸ Flower Name"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#4A148C"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/detail_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confidence: 98%"
            android:textSize="18sp"
            android:textColor="#6A1B9A"
            android:layout_marginBottom="12dp" />

        <TextView
            android:id="@+id/detail_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Color: Red"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/detail_petals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Petals: 5+"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/detail_smell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Smell: Yes"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="6dp" />

        <TextView
            android:id="@+id/detail_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Campus"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="24dp" />
    </LinearLayout>
</ScrollView>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView android:text="Color" />
    <Spinner android:id="@+id/spinner_color" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:text="Number of Petals" />
    <Spinner android:id="@+id/spinner_petals" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:text="Scented?" />
    <Spinner android:id="@+id/spinner_smell" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <TextView android:text="Location" />
    <Spinner android:id="@+id/spinner_location" android:layout_width="match_parent" android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit and Identify"
        android:layout_marginTop="24dp" />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF7F5"
    android:backgroundTint="@color/backgroundGreen"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_result_flower_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="ðŸŒ¸ The name of the flower: Rose"
            android:textColor="@color/buttonGreen"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_result_confidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Confidence: 98%"
            android:textColor="@color/buttonGreen"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/backgroundGreen"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/text_result_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:background="#FFFFFF"
            android:backgroundTint="#FFFFFF"
            android:elevation="4dp"
            android:padding="16dp"
            android:text="Introduction: Roses are a symbol of love and beauty..."
            android:textColor="#333333"
            android:textSize="16sp" />
    </LinearLayout>
</ScrollView>

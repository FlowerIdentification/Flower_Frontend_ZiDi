<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="8dp"
    android:padding="12dp"
    cardView:cardCornerRadius="8dp"
    cardView:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Flower thumbnail -->
        <!-- Flower thumbnail -->
        <ImageView
            android:id="@+id/image_thumbnail"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:contentDescription="Flower thumbnail"
            android:src="@android:drawable/ic_menu_gallery" />



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_flower_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸŒ¸ Bougainvillea"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/item_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confidence: 95%"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/item_description_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Color: Red Â· Petals: 10+ Â· Park"
                android:textSize="14sp"
                android:textColor="#444" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
